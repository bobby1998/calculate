<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:textSize="30sp"
        android:editable="false"
        android:gravity="right|center"
        android:background="@drawable/write_bg"
        android:layout_margin="10dp"
        android:alpha="0.9"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:alpha="0.9">

        <Button
            android:id="@+id/bt1"
            android:text="C"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"

            />

        <Button
            android:id="@+id/bt2"
            android:text="รท"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"
            />

        <Button
            android:id="@+id/bt3"
            android:text="*"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"
            />

        <Button
            android:id="@+id/bt4"
            android:text="DEL"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:alpha="0.9">

        <Button
            android:id="@+id/bt5"
            android:text="7"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"
            />

        <Button
            android:id="@+id/bt6"
            android:text="8"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"
            />

        <Button
            android:id="@+id/bt7"
            android:text="9"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"
            />

        <Button
            android:id="@+id/bt8"
            android:text="-"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:alpha="0.9">

        <Button
            android:id="@+id/bt9"
            android:text="4"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"
            />

        <Button
            android:id="@+id/bt10"
            android:text="5"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"
            />

        <Button
            android:id="@+id/bt11"
            android:text="6"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"
            />

        <Button
            android:id="@+id/bt12"
            android:text="+"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/write_selector"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:alpha="0.9"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <Button
                android:id="@+id/bt13"
                android:text="1"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/write_selector"
            />

            <Button
                android:id="@+id/bt14"
                android:text="2"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/write_selector"
            />

            </LinearLayout>

        <Button
            android:id="@+id/bt15"
            android:text="0"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/write_selector"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="15dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:alpha="0.9">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <Button
                android:id="@+id/bt16"
                android:text="3"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/write_selector"
                />

            <Button
                android:id="@+id/bt17"
                android:text="."
                android:textSize="30sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/write_selector"
                />

            </LinearLayout>

        <Button
            android:id="@+id/bt18"
            android:text="="
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/orange_selector"
            />

    </LinearLayout>

    </LinearLayout>
</LinearLayout>